{
  "name": "openapi-safety-net",
  "version": "1.0.0",
  "description": "An opinionated microservice wrapper for rapid development based off OpenAPI documentation",
  "main": "bin/cli.js",
  "scripts": {
    "build": "ts-node build.ts",
    "lint": "npx eslint source",
    "lint:fix": "npx eslint source --fix",
    "cli": "ts-node source/index.ts",
    "start": "rm -rf tmp && mkdir -p tmp && npm run cli -- --openapi tests/unit/petstore/petstore.yaml --output ./tmp/petstore-dev",
    "start:build": "npm run build && rm -rf tmp && mkdir -p tmp && node bin/index.js --openapi tests/unit/petstore/petstore.yaml --output ./tmp/petstore-dev",
    "test:prepare": "npm run cli -- --openapi tests/unit/petstore/petstore.yaml --output ./tests/.builds.petstore-output",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:safe": "jest",
    "test:coverage": "npm run test -- --coverage"
  },
  "author": "Damian Pokorski @damianpokorski",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@apideck/better-ajv-errors": "^0.3.6",
    "@tsconfig/node22": "^22.0.0",
    "@types/cli-color": "^2.0.6",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.2",
    "cli-color": "^2.0.4",
    "commander": "^12.1.0",
    "jest": "^29.7.0",
    "jest-cucumber": "^4.4.0",
    "ts-jest": "^29.1.5",
    "typescript": "^5.5.3"
  },
  "dependencies": {
    "@openapitools/openapi-generator-cli": "^2.13.4",
    "@sidvind/better-ajv-errors": "^2.1.3",
    "@stoplight/json-ref-resolver": "^3.1.6",
    "@types/js-yaml": "^4.0.9",
    "ajv": "^8.16.0",
    "ajv-formats": "^3.0.1",
    "esbuild": "^0.21.5",
    "js-yaml": "^4.1.0",
    "ts-node": "^10.9.2"
  }
}
