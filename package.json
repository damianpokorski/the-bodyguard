{
  "name": "cribri",
  "version": "0.0.1",
  "description": "An opinionated microservice wrapper for rapid development based off OpenAPI documentation",
  "main": "bin/cli.js",
  "scripts": {
    "build": "ts-node build.ts",
    "lint:prettier": "prettier --config .prettierrc 'source/**/*.ts' --write",
    "lint": "npx eslint source *.ts",
    "lint:fix": "npm run lint -- --fix",
    "cli": "ts-node source/index.ts",
    "start": "rm -rf tmp && mkdir -p tmp && npm run cli -- --openapi tests/unit/petstore/petstore.yaml --output ./tmp/petstore-dev",
    "start:build": "npm run build && rm -rf tmp && mkdir -p tmp && node bin/index.js --openapi tests/unit/petstore/petstore.yaml --output ./tmp/petstore-dev",
    "test:prepare": "npm run cli -- --openapi tests/unit/petstore/petstore.yaml --output ./tests/.builds.petstore-output",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:safe": "jest",
    "test:coverage": "npm run test -- --coverage",
    "prepare": "husky"
  },
  "author": "Damian Pokorski @damianpokorski",
  "license": "MIT",
  "type": "commonjs",
  "devDependencies": {
    "@apideck/better-ajv-errors": "^0.3.6",
    "@eslint/js": "^9.6.0",
    "@tsconfig/node22": "^22.0.0",
    "@types/cli-color": "^2.0.6",
    "@types/eslint__js": "^8.42.3",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.2",
    "cli-color": "^2.0.4",
    "commander": "^12.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "globals": "^15.8.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-cucumber": "^4.4.0",
    "prettier": "^3.3.2",
    "ts-jest": "^29.1.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3",
    "typescript-eslint": "^7.16.0"
  },
  "dependencies": {
    "@openapitools/openapi-generator-cli": "^2.13.4",
    "@stoplight/json-ref-resolver": "^3.1.6",
    "@types/js-yaml": "^4.0.9",
    "ajv": "^8.16.0",
    "ajv-formats": "^3.0.1",
    "esbuild": "^0.21.5",
    "js-yaml": "^4.1.0"
  }
}
